<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mail_list_text_layout"
        xmlns:tools="http://schemas.android.com/tools"        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:paddingStart="6dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/mail_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/mail_list_subtitle"
            android:layout_toStartOf="@+id/mail_list_date"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            tools:text="Title" />

        <TextView
            android:id="@+id/mail_list_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mail_list_title"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_toStartOf="@+id/mail_list_date"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            tools:text="Subtitle" />

        <TextView
            android:id="@+id/mail_list_date"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/mail_list_thumbnail"
            android:gravity="center_vertical"
            android:text="Date"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/mail_list_thumbnail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/attachement"
            android:scaleType="centerInside"
            tools:src="@drawable/ic_bijlage" />

    </RelativeLayout>
</RelativeLayout>